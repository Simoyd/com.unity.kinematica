.mainContainer {
    flex: 1 0 0;
    align-items:stretch;
}

#kinematica {
    flex: 1 0 0;
    align-items:stretch;
}

#windowContent {
    flex: 1 0 0;
    align-items:stretch;
}

#toolbar {
    height: 20px;
}

#inputArea {
    margin-right: 2px;
    min-width: 200px;
    flex-direction: row;
    padding-left: 2px;
}

#assetSettingsScrollView {
    flex-grow: 1;
}

#targetGameObject {
    border-width: 1px;
}

#prefabTarget {
    margin-bottom: 4px;
    flex: 1;
}

.warningImage {
    --unity-image : resource("Icons/ShortcutManager/alertDialog.png");
    width: 16px;
    height: 16px;
    padding: 2px;
    display: none;
}

.infoImage {
    --unity-image : resource("Icons/console.infoicon.png");
    width: 16px;
    height: 16px;
    padding: 2px;
    display: none;
}

.timelineArea {
    flex-direction: row;
    justify-content: space-between;
    min-width: 450px;
    padding-right: 2px;
}

#tagArea {
    flex: 1 0 0;
    align-content: center;
    justify-content: center;
    flex-direction: row;
}

.row {
    flex-direction: row;
    justify-content: space-between;
}

Slider {
    flex : 1 0 0;
}

.arrayButton {
    align-self: flex-end;
    border-width: 0px;
    padding-top: 0px;
}

.clipTimeline {
    flex-grow:1;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    margin: 4px;
}

.tag {
    align-self: center;
}

.preview {
    align-self: center;
}

.createLayout {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
}


.flexGrowClass {
    flex: 1 0;
}

.boxed {
    border-width: 2px;
}

#tagTimeline {
    min-height: 20px;
}

.marker {
    width: 2px;
    min-width: 2px;
    position: absolute;
    top: 0;
    bottom:0;
    left:0;
    right: 0;
}

.multi-marker {
        /* GUIStyle.alignment */
    -unity-text-align: middle-center;

    /* GUIStyle.fixedHeight */
    height: 16px;

    /* GUIStyle.fixedWidth */
    width: 9px;

    /* GUIState.background */
    background-image: resource("Packages/com.unity.kinematica/Editor/Images/Timeline-Marker-Multi-Overlay.png");
}

.marker-selected {
    border-width: 1px;
}

.marker:hover {
    border-top-width: 1px;
}

#deleteButton {
    padding-top: 4px;
    padding-bottom: 4px;
    max-height: 16px;
}

.inspectorContainer {
    margin-left: 5px;
    margin-top: 20px;
    margin-right: 5px;
    margin-bottom: 10px;
}

/* Asset Editor */

#metrics {
    flex: 1 0 0;
    margin-left: 3px;
}

.metricsDrawers {
    margin-left: 4px;
}

.sliderElement {
    flex-direction: row;
    flex-shrink: 0;
}


#timeSliderArea {
    border-top-width: 2px;
    padding-top: 2px;
}

.sliderFloatField {
    width: 64px;
}

/* Marker Editor */

.menuContainer {
    border-bottom-width: 1px;
}

#addMarkerMenu {
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 4px;
    padding-bottom: 4px;
    align-self: flex-end;
}

.markerScrollView {
    flex-grow: 1;
}

.structInfoContainer {
    border-width: 1px;
}

.structInfoLabel {
    padding-top: 2px;
    border-bottom-width: 1px;
    margin-bottom: 4px;
    margin-left: 4px;
    -unity-font-style: bold;
    font-size: 12px;
}

.markerField {
    border-bottom-width: 1px;
}

.markerTypeLabel {
    padding-left: 4px;
    font-size: 12px;
}

/* Inspector */
.inspectorSection {
    border-width: 1px;
}

.inspectorSectionLabel{
    padding-top: 4px;
    padding-bottom: 2px;
    padding-left: 2px;
}

.drawerElement {
    margin-top: 2px;
}

.editor {
    padding-top: 4px;
    padding-bottom: 4px;
    padding-right: 2px;
    padding-left: 2px;
    margin-left: 0px;
    margin-right: 0px;
    border-bottom-width: 1px;
}

.drawerRoot {
    border-width:1px;
    margin-top: 4px;
}

.drawerButtonContainer {
    flex-direction: row;
    align-self: flex-end;
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;

    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 0px;

    top: -1px;
    left: -2px;
}

.arrayEntryContents .unity-toggle__text {
    margin-left: 1px;
}

.arrayEntryContents {
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 2px;
    padding-bottom: 2px;
    border-bottom-width: 1px;
}

.arrayEntryContents PropertyField {
    padding-bottom: 1px;
}

.warningContainer {
    flex-direction: row;
}

.assetDirtyWarningImage {
    display: flex;
}
